extends layout

block content
  h1= title  
  p 
  div(class="container-fluid")
        div(class="row")
            -
                let snake = [
                    {
                        "name": "cobra",
                        "color": "black" ,
                        "weight": 30
                    },
                    {
                        "name": "busss",
                        "color": "brown" ,
                        "weight": 25
                    },
                    {
                        "name": "anaconda",
                        "color": "white" ,
                        "weight": 40
                    },                   
                ]
            each v,index in snake 
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.name}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.color}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.weight}

  script.                
        function buy(intemNo)
        {
              alert(`you purchased Item ${intemNo+1}`)
        }